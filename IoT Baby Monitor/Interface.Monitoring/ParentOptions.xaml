<Window x:Class="BabyphoneIoT.Interface.Monitoring.ParentOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabyphoneIoT.Interface.Monitoring"
        mc:Ignorable="d"
        Title="Parent Monitoring Interface Options" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Press to request help from nurse" Grid.Column="1" Grid.Row="2" Width="180" Height="70"/>
        <Button Name="BtnHelp" Content="Ask for help" Click="Ask_for_help" Grid.Row="2" Grid.Column="1" Height="30" Width="80"/>

        <TextBlock Text="Press to stop monitoring baby" Grid.Column="1" Grid.Row="3" Width="180" Height="70"/>
        <Button Name="BtnStop" Content="Stop Monitoring" Click="Stop_Monitoring" Grid.Row="3" Grid.Column="1" Height="30" Width="100"/>

    </Grid>
</Window>
